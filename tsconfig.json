{
  "compilerOptions": {
      "target": "ES2020", // Set the target to ES6
      "module": "commonjs", // Use commonjs for module resolution
      "strict": true,
      "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist", // Output directory for compiled files
      "rootDir": "./src" // Root directory of your source files
  },
  "include": ["src/**/*", "jest.config.js"], // Include all TypeScript files in the src directory
  "exclude": ["node_modules", "dist"] // Exclude node_modules and dist directories
}